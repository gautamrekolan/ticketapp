<h1>Priorities</h1>

<table class="table table-striped">
 <thead>
  <tr>
    <th>Name</th>
    <th>Days</th>
    <th>Tickets</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
    <% @priorities.each do |priority| %>
      <tr>
        <td><%= priority.name %></td>
        <td><%= priority.days %></td>
        <td><span class="badge"><%= priority.tickets.open.count %></span></td>
        <td>
          <%= link_to 'Edit', edit_priority_path(priority) %>
          <% if priority.tickets.empty? %>
            <td><%= link_to 'Destroy', priority, confirm: 'Are you sure?', method: :delete %></td>
          <% end %>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>

<%= link_to "New", new_priority_path, :class => 'btn btn-primary' %>
