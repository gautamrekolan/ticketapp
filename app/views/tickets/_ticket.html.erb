<div id="ticket">
<div class="row">
  <div class="span9"><h3><small>#<%= ticket.id %></small>&#032;<%= link_to ticket.subject, ticket %></h3></div>
  <div class="span1"><%= display_due(ticket) %></div>
</div>

<div class="row">
  <div class="span10"><i><%= display_user ticket.contact %></i>, <%= display_date ticket.created_at %></div>
</div>

<div class="row">
  <div class="span10" style="color: grey;"><%= truncate(ticket.description, :length => 300) %></div>
</div>

<div class="row">
  <div class="span2"><i class="icon-flag"></i><%= ticket.priority.name %></div>
  <div class="span2"><i class="icon-tag"></i><%= display_team ticket.team %></div>
  <div class="span2"><i class="icon-inbox"></i><%= display_user(ticket.assignee) %></div>
  <div class="span2"><i class="icon-comment"></i><%= ticket.comments.count %></div>
  <div class="span1 offset1"><%= link_to 'Edit', edit_ticket_path(ticket) %></div>
</div>

<div class="row">
  <div class="span10"><hr></div>
</div>

</div>



